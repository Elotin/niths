<global-method-security pre-post-annotations="enabled" proxy-target-class="true"/>
<!-- First use basic authentication, if not provided, use digest -->
	<http create-session="stateless" >
		<!--  <intercept-url pattern="/students/**" access="ROLE_ADMIN" />-->
		<intercept-url pattern="/committees/**" access="ROLE_ADMIN" />
		<intercept-url pattern="/admin/**" access="ROLE_ADMIN" />
		<!-- basic header: -->
		<!--
			Header ex for basic:
			Accept: application/xml
			Authorization: Basic YWRtaW46YWRtaW4= 
			//(YWRta... = base64 of admin:admin)
			-->
		<http-basic />
		<custom-filter ref="authfilter" after="BASIC_AUTH_FILTER"/>
	</http>
	
	<beans:bean id="authfilter"
				class="no.niths.security.UserAuthFilter"> 
	</beans:bean>

	<authentication-manager>
		<authentication-provider>
			<user-service id="userService">
				<user name="admin" password="admin" authorities="ROLE_ADMIN" />
				<user name="user" password="user" authorities="ROLE_USER" />
				<user name="test" password="test" authorities="ROLE_TEST" />
			</user-service>
		</authentication-provider>
	</authentication-manager>
	</beans:beans>